# CPU-only Dockerfile with PyTorch and Whisper
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsndfile1 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy CPU requirements
COPY requirements.cpu.txt .

# Install Python packages (CPU-only PyTorch)
RUN pip install --no-cache-dir -r requirements.cpu.txt

# Copy source code
COPY src/ ./src/

# Create directories
RUN mkdir -p data uploads exports cache logs

# Set permissions
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Environment
ENV PYTHONPATH=/app
ENV USE_LOCAL_GPU=false
ENV TRANSCRIPTION_MODE=cpu_whisper

EXPOSE 8501

HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

CMD ["streamlit", "run", "src/app.py", "--server.address=0.0.0.0", "--server.port=8501"]