# Cloud Transcript - Environment Variables
# Copie este arquivo para .env e configure suas chaves

# =================================
# MODO DE TRANSCRIÇÃO
# =================================

# Modo de operação: local_gpu | groq_api | google_cloud | huggingface
TRANSCRIPTION_MODE=local_gpu

# =================================
# LOCAL GPU (RTX 3060)
# =================================

# Usar GPU local (true/false)
USE_LOCAL_GPU=true
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
TORCH_DEVICE=cuda

# =================================
# APIs DE TRANSCRIÇÃO (FALLBACKS)
# =================================

# Groq API (Fallback - Free: 6.000 segundos/minuto)
# Obter em: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Google Cloud Speech-to-Text (Opcional - Free: 60 min/mês)
# Obter em: https://cloud.google.com/speech-to-text
GOOGLE_CLOUD_API_KEY=your_google_cloud_key_here
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# Hugging Face (Opcional - Fallback)
# Obter em: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your_hf_token_here

# =================================
# CONFIGURAÇÕES DA APLICAÇÃO
# =================================

# Ambiente de execução
ENVIRONMENT=development

# Configurações de upload
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=opus,mp3,wav,m4a,aac
MAX_FILES_PER_UPLOAD=20

# Configurações de cache
ENABLE_CACHE=true
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE_MB=500

# =================================
# CONFIGURAÇÕES STREAMLIT
# =================================

# Interface
STREAMLIT_THEME=dark
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_WATCH_FOR_CHANGES=true

# =================================
# CONFIGURAÇÕES DE DEPLOY
# =================================

# Para Google Cloud Run
GCP_PROJECT_ID=your_gcp_project
GCP_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=cloud-transcript

# Para VPS (isolado do projeto existente)
VPS_DOMAIN=transcript.frontzin.com.br
VPS_PORT=8502
VPS_CONTAINER_NAME=cloud_transcript_prod
SSL_EMAIL=ecodelearn@outlook.com

# Supabase (compartilhado com projeto existente)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# =================================
# LOGS E MONITORING
# =================================

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Sentry para error tracking (opcional)
SENTRY_DSN=your_sentry_dsn_here

# =================================
# SEGURANÇA
# =================================

# Chave secreta para sessões (gere uma aleatória)
SECRET_KEY=your_secret_key_here

# CORS origins permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:8501,https://vps.frontzin.com.br